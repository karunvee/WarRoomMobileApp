<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button's background when pressed -->
    <item android:state_pressed="false" >
        <shape>
            <solid android:color="@color/transparent" />
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/txtColor3"/>
        </shape>
    </item>
    <!-- Button's background when focused -->
    <item  android:state_focused="true">
        <shape>
            <solid android:color="@color/txtColor4" />
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/txtColor3"/>
        </shape>
    </item>
    <!-- Default button's background -->
    <item>
        <shape>
            <solid android:color="@color/txtColor4" />
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/txtColor3"/>
        </shape>
    </item>
</selector>