<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/txtTopicReaSol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReasonCode Information"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/txtColor2"
            android:textSize="16dp"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:id="@+id/layoutErrorCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txtTopicReaSol">
            <TextView
                android:id="@+id/txtE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Error Code: "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtErrorCodeReaSol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutEquipType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layoutErrorCode">
            <TextView
                android:id="@+id/txtE2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipment Type: "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtEquipTypeReaSol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM-S0010099-0099"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description (EN)"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/txtColor2"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutEquipType"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/txtEnDesReaSol"
            style="@style/InputText2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:gravity="start|top"
            android:hint="Description on here!"
            android:inputType="textMultiLine"
            android:textColorHint="@color/txtColor3"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEN"
            tools:layout_editor_absoluteX="15dp" />
        <TextView
            android:id="@+id/txtTH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Description (TH)"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/txtColor2"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/txtEnDesReaSol"
            app:layout_constraintBaseline_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <EditText
            android:id="@+id/txtThDesReaSol"
            style="@style/InputText2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:gravity="start|top"
            android:hint="Description on here!"
            android:inputType="textMultiLine"
            android:textColorHint="@color/txtColor3"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTH"
            tools:layout_editor_absoluteX="15dp" />
        <LinearLayout
            android:id="@+id/layoutEmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/txtThDesReaSol">
            <TextView
                android:id="@+id/txtEmp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Writer : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtEmpReaSol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="86999999"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layoutEmp">
            <TextView
                android:id="@+id/txtDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Date: "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtDateReaSol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19-12-2023 10:30:12"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/layoutDate">
            <TextView
                android:id="@+id/txtRating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating : "
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtRatingReaSol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/txtColor2"
                android:textSize="14dp" />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutRating">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/btnCancelInfoReaSol"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:background="@drawable/rounded_button3"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="10px"
                    android:text="Cancel"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    />
                <Button
                    android:id="@+id/btnUpdateInfoReaSol"
                    android:layout_width="wrap_content"
                    android:layout_height="80px"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="10px"
                    android:text="Update"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:enabled="false"
                    android:layout_toEndOf="@+id/btnCancelUrlSetting"/>
            </LinearLayout>
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>