<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CCTVActivity">

    <WebView
        android:id="@+id/CameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="@+id/CameraView">
        <Button
            android:id="@+id/btnBackMachine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_button4"
            android:drawableLeft="@drawable/baseline_arrow_left_black"
            android:paddingLeft="8dp" />
        <Button
            android:id="@+id/btnViewRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/btnBackMachine"
            android:background="@drawable/rounded_button4"
            android:drawableLeft="@drawable/baseline_refresh"
            android:paddingLeft="8dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>