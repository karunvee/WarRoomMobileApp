<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.MachineHistoryFragment">

    <LinearLayout
        android:id="@+id/signup_panel_middle2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/success_animation"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:textAlignment="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="under_development_animation.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/success_animation"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Under development \n..."
            android:textAlignment="center"
            android:textColor="@color/txtColor1"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>