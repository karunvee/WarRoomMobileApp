<?xml version="1.0" encoding="utf-8"?>
<!-- card_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtMachineName"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Auto Test T2 #HIPOT + VIBRATION"
                android:textColor="@color/txtColor1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="2dp"
                android:text="Error"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/error_message_box"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txtDescription"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/txtColor3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgView_location"
                android:layout_marginRight="3dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_location_36_blue"/>
            <TextView
                android:id="@+id/txtLineName"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="CN09"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgView_location"
                android:textColor="@color/txtColor2"/>
            <ImageView
                android:id="@+id/imgView_error"
                android:layout_marginRight="3dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_error_36_blue"
                android:layout_toEndOf="@+id/txtLineName"/>
            <TextView
                android:id="@+id/txtErrorCode"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Code 102"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgView_error"
                android:textColor="@color/txtColor2"/>
            <TextView
                android:id="@+id/txtIssuedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="14:20 25/07/2022"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/txtColor2"/>
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
